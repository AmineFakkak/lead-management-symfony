    // ── LAYOUT FIX: fixed scroll container approach ────────────────
    (function() {
        function fixLayout() {
            // Hide EA's sidebar/topbar completely
            var hideSels = ['.ea-sidebar', 'aside.ea-sidebar', '#sidebar',
                            '.sidebar-wrapper', '.main-sidebar',
                            'header.navbar', 'nav.navbar', '.content-top'];
            hideSels.forEach(function(sel) {
                document.querySelectorAll(sel).forEach(function(el) {
                    el.style.setProperty('display',   'none',  'important');
                    el.style.setProperty('width',     '0',     'important');
                    el.style.setProperty('min-width', '0',     'important');
                    el.style.setProperty('flex',      '0 0 0px','important');
                    el.style.setProperty('padding',   '0',     'important');
                    el.style.setProperty('margin',    '0',     'important');
                });
            });

            // Make content wrapper a fixed scroll container covering the right area
            var contentSels = ['.content-wrapper', '.ea-main', '#content-wrapper'];
            contentSels.forEach(function(sel) {
                document.querySelectorAll(sel).forEach(function(el) {
                    el.style.setProperty('position',   'fixed',            'important');
                    el.style.setProperty('top',        '56px',             'important');
                    el.style.setProperty('left',       '220px',            'important');
                    el.style.setProperty('right',      '0',                'important');
                    el.style.setProperty('bottom',     '0',                'important');
                    el.style.setProperty('width',      'auto',             'important');
                    el.style.setProperty('height',     'auto',             'important');
                    el.style.setProperty('overflow-y', 'auto',             'important');
                    el.style.setProperty('overflow-x', 'auto',             'important');
                    el.style.setProperty('margin',     '0',                'important');
                    el.style.setProperty('padding',    '0',                'important');
                    el.style.setProperty('background', '#f1f3f9',          'important');
                    el.style.setProperty('z-index',    '1',                'important');
                    el.style.setProperty('box-sizing', 'border-box',       'important');
                });
            });
        }

        if (document.readyState === 'loading') {
            document.addEventListener('DOMContentLoaded', fixLayout);
        } else {
            fixLayout();
        }
        window.addEventListener('load', fixLayout);
    })();
    </script>

    <script>
    document.addEventListener('DOMContentLoaded', function() {
        // Search functionality
        const searchInput = document.getElementById('global-search');
        if (searchInput) {
            searchInput.addEventListener('input', function() {
                const query = this.value.toLowerCase();
                document.querySelectorAll('.datagrid tbody tr').forEach(row => {
                    const text = row.textContent.toLowerCase();
                    row.style.display = text.includes(query) ? '' : 'none';
                });
            });
        }

        // Update active link in sidebar
        const currentPath = window.location.pathname;
        document.querySelectorAll('.si-link').forEach(link => {
            if (link.getAttribute('href') === currentPath) {
                link.classList.add('active');
            }
        });

        // Fix delete confirmation modal
        const deleteModalTitle = document.getElementById('action-confirmation-title');
        if (deleteModalTitle) {
            deleteModalTitle.textContent = 'Êtes-vous sûr de vouloir supprimer cet élément ?';
        }
        
        // Fix batch action modal
        const batchModalTitle = document.getElementById('batch-action-confirmation-title');
        if (batchModalTitle) {
            batchModalTitle.textContent = 'Vous allez appliquer cette action à plusieurs éléments';
        }
        
        // Fix modal buttons
        const modalConfirmBtn = document.getElementById('modal-action-confirmation-button');
        if (modalConfirmBtn) {
            const btnLabel = modalConfirmBtn.querySelector('.btn-label');
            if (btnLabel) btnLabel.textContent = 'Confirmer';
        }
        
        const batchConfirmBtn = document.getElementById('modal-batch-action-button');
        if (batchConfirmBtn) {
            const btnLabel = batchConfirmBtn.querySelector('.btn-label');
            if (btnLabel) btnLabel.textContent = 'Confirmer';
        }
        
        // Fix cancel buttons
        document.querySelectorAll('[data-bs-dismiss="modal"] .btn-label').forEach(btn => {
            if (btn.textContent.includes('Cancel')) {
                btn.textContent = 'Annuler';
            }
        });
        
        // Fix results text
        const resultsElement = document.querySelector('.list-pagination-counter');
        if (resultsElement) {
            const match = resultsElement.innerHTML.match(/<strong>(.*?)<\/strong>/);
            if (match) {
                const count = match[1];
                resultsElement.innerHTML = `<strong>${count}</strong> résultats`;
            }
        }
    });
    </script>
    
